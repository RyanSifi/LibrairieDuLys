{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <h1>Mot de passe oublié</h1>

    {% if app.session.flashbag.has('success') %}
        <div class="alert alert-success">
            {{ app.session.flashbag.get('success')[0] }}
        </div>
    {% endif %}

    {% if app.session.flashbag.has('danger') %}
        <div class="alert alert-danger">
            {{ app.session.flashbag.get('danger')[0] }}
        </div>
    {% endif %}

    {{ form_start(forgotPasswordForm) }}
        <div class="form-group">
            {{ form_label(forgotPasswordForm.email) }}
            {{ form_widget(forgotPasswordForm.email, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(forgotPasswordForm.email) }}
        </div>

        <button type="submit" class="btn btn-primary">Envoyer</button>
    {{ form_end(forgotPasswordForm) }}
{% endblock %}